{
  "apiVersion": "areogear.org/v1alpha1",
  "kind": "Keycloak",
  "metadata": {
    "name": "example"
  },
  "spec": {
    "version": "4.1.0",
    "adminCredentials": "adminCredentialSecret",
    "realms": [
      {
        "name": "arealm",
        "authMethods": [
          {
            "provider": "github",
            "clientID": "someclientID,",
            "clientSecret": "somek8ssecret"
          }
        ],
        "users": [
          {
            "username": "test@example.com",
            "outputSecret": "test-user",
            "roles": [
              "somerole"
            ]
          }
        ],
        "clients": [
          {
            "name": "mobile",
            "clientType": "public",
            "config": {
              "webOrigins": "*"
            },
            "outputSecret": "mobile"
          },
          {
            "name": "server",
            "type": "bearer",
            "config": {
              "baseURL": "https://keycloak.com"
            },
            "outputSecret": "server"
          }
        ]
      }
    ]
  }
}